<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" onPause="pause" lightcolor="#1fafdb" darkcolor="#155467">
  <tabs id="tabs" onChange="refresh">
    <tab text="Player">
      <row>
        <button icon="vdown" onTap="volume_down" />
        <button icon="fullscreen" onTap="fullscreen" />
        <button icon="vup" onTap="volume_up" />
      </row>
      <row>
        <button icon="left" onTap="rewind" />
        <button icon="right" onTap="forward" />
      </row>
      <row>
        <button icon="previous" onTap="previous" />
        <button icon="stop" onTap="stop" />
        <button icon="playpause" onTap="play_pause" />
        <button icon="next" onTap="next" />
      </row>
      <row>
        <button icon="zoomin" onTap="zoom_in" />
        <button icon="zoomnormal" onTap="zoom_normal" />
        <button icon="zoomout" onTap="zoom_out" />
      </row>
    </tab>
    <tab text="DVD">
      <row>
        <button icon="arrowup" onTap="up" />
      </row>
      <row>
        <button icon="arrowleft" onTap="left" />
        <button icon="arrowright" onTap="right" />
      </row>
      <row>
        <button icon="arrowdown" onTap="down" />
      </row>
      <row>
        <button text="Sub" onTap="sub" />
        <button text="Title" onTap="title" />
        <button text="Lang" onTap="lang" />
      </row>
      <row>
        <button icon="previous" onTap="previous_chapter" />
        <button text="Chapter" onTap="chapter" />
        <button icon="next" onTap="next_chapter" />
      </row>
    </tab>
  </tabs>
</layout>